main
    .container
        position relative
        padding 40px 10px
        text-align center
        backface-visibility hidden
        
        h2
            font-size em(24px)
            font-weight 800
            margin 0
        p 
            font-size em(14px)
            line-height 1.6
            margin 20px auto
            padding 0 10px
            max-width 420px
            
            
        +above($mobile)
            padding 60px 0
            
            h2
                font-size em(36px)
            p
                font-size em(18px)
                max-width $mobile
                padding 0 20px
                max-width 640px
                
            .btn
                margin-top 40px
                
    #about
        .container
            //margin-top 60px 
                   
            .me
                margin 0 0 60px
            
                h1
                    font 100 em(50px) $nexa
                    font-weight 100
                    margin 0
                
                h3
                    font-size em(18px)
                    font-weight 500
                    margin 0
                    
                p
                    font-size em(14px)
                    padding 0 10px
                    margin 20px auto
                    max-width 360px
            
            .services
                margin 40px 0 0
                
                > div 
                    margin 40px 0
                    
                
                .icon
                    background rgba($grey, .1)
                    display block
                    border-radius 100%
                    width 100px
                    height 100px
                    margin 0 auto
                    flexbox()
                    align-items center
                    justify-content center
                
                h4
                    font 100 em(24px) $nexa
                    margin 20px 0 0
                    
                p
                    font-size em(13px)
                    margin 10px auto 0
                
                    

        +above($mobile)
            .container
                //margin-top 80px 
                padding-bottom 100px
                .me
                    h1
                        font-size em(80px)
                    h3
                        font-size em(24px)
                    p
                        font-size em(20px)
                        max-width 420px
                        margin 30px auto
                        
                .services
                    center(940px)
                    clearfix()
                    
                    .icon
                        width 120px
                        height 120px
                        
                    p
                        font-size em(16px)
                        margin 20px 0
                        padding 0 10px  
                    > div
                        margin 0
                        col(1/3)
                        
                        



    #work
        .container
            background $teal
            color $grey-2
            padding-bottom 50px
            
            &:before
                content ""
                position absolute
                top 0
                left 0
                right 0
                bottom 0
                display block
                transform skew(0, 4deg)
                transform-origin top right
                background $teal
                z-index -1
                
            .project
                margin 40px auto 0
                
                img
                    display block
                    margin 0 auto 40px
                
                header
                    margin 20px 0
                    
                    h3 
                        font-size em(32px)
                        font-weight 100
                        margin 0
                        
                        svg
                            width 150px
                            
                            path
                                fill $white
                            
                    
                    span 
                        font-weight 500   
                        font-size em(14px)
                        
                .content
                    p
                        font-size em(13px)
                        margin 20px auto
                
                .btn
                    background $cyan
                    color $white
                    
                    
        +above($mobile)
            .container
                
                
                p
                    max-width 640px
                
                .project
                    margin 60px auto 40px
                    max-width 940px
                
                    header
                        h3 
                            font-size em(48px)
                            
                            svg
                                width 240px
                    
                    .content
                        p
                            font-size em(16px)
                        

    #contact
        .container
            color $grey-2
            background $purple
            z-index 1
            
            &:before
                content ""
                position absolute
                top 0
                left 0
                right 0
                bottom 0
                display block
                transform skew(0, -2deg)
                transform-origin top left
                background $purple
                z-index -1
            
            .btn
                color $white
                background $pink
        
        +above($mobile)
            .container
                p
                    max-width 540px
        